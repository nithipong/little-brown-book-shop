{
  "root": true,
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "parser": "babel-eslint"
  },
  "rules": {
    "semi": 0,
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true
      }
    ]
  },
  "extends": ["plugin:vue/essential", "eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["vue", "prettier"],
  "globals": {
    "FB": true,
    "gapi": true,
    "$": true,
    "google": true,
    "Velocity": true,
    "moment": true,
    "ga": true,
    "jquery": true,
    "Turbolinks": true,
    "fbq": true,
    "gtag": true
  }
}
